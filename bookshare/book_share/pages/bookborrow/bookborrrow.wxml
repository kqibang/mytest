<!--pages/bookborrow/bookborrrow.wxml-->
<view class="container1">
    <text>书名：</text>
    <text>{{book.b_name}}</text>
</view>
<view class="container1">
    <text>作者：</text>
    <text>{{book.b_author}}</text>
</view>
<view class="container1">
    <text>借阅人：</text>
    <text>{{u_name}}</text>
    <!-- <input value="{{u_name}}" bindinput="inputUname"></input> -->
</view>
<view class="container1">
    <text>积分数：</text>
    <text>{{book.b_score}}</text>
</view>
<view class="container1">
    <text>借阅时长：</text>
    <text>{{day}}</text>
    <!-- <input type="text" value="{{day}}"/> -->
</view>
<view wx:if="{{u_name === '无法获取用户名，请先登录'}}">
    <button bindtap="gotoLogin" type="primary">前往登陆</button>
</view>
<view wx:else>
    <button bindtap="ConfirmBorrow" type="primary">确认借阅</button>
</view>